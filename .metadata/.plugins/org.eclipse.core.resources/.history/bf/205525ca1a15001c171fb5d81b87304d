package com.demo.controllers;

import java.util.List;

import javax.ws.rs.core.MediaType;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.ResponseBody;
import org.springframework.web.bind.annotation.RestController;

import com.demo.customException.FlightException;
import com.demo.models.Flight;
import com.demo.service.FlightService;

@RestController
public class FlightController {

	@Autowired
	private FlightService service;

	@GetMapping("/search")
	public List<Flight> getAllFlights() {
		return service.getAllFlight();
	}

	/*
	 * @RequestMapping(value = "/add", method = RequestMethod.POST, produces =
	 * MediaType.APPLICATION_JSON, consumes =MediaType.APPLICATION_JSON)
	 * 
	 * @ResponseBody
	 */
	@PostMapping("/add")
	public String updatMovie(@RequestBody Flight flight) throws FlightException {
		return service.updateFlight(flight);
	}

	@RequestMapping(value = "/delete", method = RequestMethod.DELETE, produces = "application/json", consumes = "application/json")
	public String deleteFlight(@RequestBody Flight flight) throws FlightException {
		return service.deleteFlight(flight);
	}
	
	@RequestMapping(value = "/blockFlight", method = RequestMethod.POST, produces = "application/json", consumes = "application/json")
	public String blockFlight(@RequestBody Flight flight) throws FlightException {
		return service.blockFlight(flight);
	}

}
